        .contact-carousel {
            padding: 0;
            color: #333;
        }

        .contact-carousel .item {
            padding: 50px 55px;
            text-align: center;
        }

        .contact-carousel .item .contact-image {
            margin-top: 50px;
        }

        .contact-carousel .item .card-details {
            padding: 0;
        }

        .contact-carousel .item .card-details img.client-logo {
            margin: 0 auto 25px;
        }

        .contact-carousel .item .card-details .card-name {
            display: block;
            margin-bottom: 5px;
            text-transform: uppercase;
            font-family: Raleway,"Helvetica Neue",Helvetica,Arial,sans-serif;
            font-size: 40px;
            font-weight: 900;
            line-height: 40px;
        }

        .contact-carousel .item .card-details .card-description {
            display: block;
            font-size: 18px;
            line-height: 18px;
            padding: 0;
        }


        .contact-carousel .item .card-details .card-telephone {
            display: block;
            font-size: 18px;
            line-height: 18px;
            padding: 18px 0 18px;
            font-style: italic;
        }

        .contact-carousel .owl-controls {
            margin-top: 0;
        }

        .contact-carousel .owl-controls .owl-prev,
        .contact-carousel .owl-controls .owl-next {
            position: absolute;
            top: 0;
            bottom: 0;
            width: 50px;
            height: 75px;
            margin: auto 0!important;
            border-radius: 0!important;
            text-align: center;
            font-size: 30px!important;
            line-height: 70px;
            color: #fff!important;
            background-color: #ef4035!important;
            -webkit-transition: all .5s;
            -moz-transition: all .5s;
            transition: all .5s;
        }
