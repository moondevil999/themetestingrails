            }

            .contact-carousel .item .card-details {
                padding: 15% 0 0;
            }

            .contact-carousel .item .card-details img.client-logo {
                margin: 0 auto 25px 0;
            }

            .contact-carousel .item .card-details .card-name {
                display: block;
                font-size: 50px;
                line-height: 50px;
            }

            .contact-carousel .item .card-details .card-description {
                font-size: 20px;
                line-height: 20px;
            }

            .contact-carousel .item hr.colored {
                margin: 20px auto 20px 0;
            }
        }

        .contact-gallery .item {
            padding: 15px;
        }


        .about-content {
            padding: 12px 30px 0 30px;
        }

        footer.footer {
